include ../include/page.pug
h2 #{webring.name}
div.content-block
	div.detail-descripion #{webring.description}
	if isUserModerator
		div.controls
			a(href='/webring/' + webring.url + '/add') Add New Site
			a(href='/webring/' + webring.url + '/update') Update Webring
			if isUserOwner
				a(href='/webring/' + webring.url + '/delete') Delete Webring
h2 Sites
div#webring-detail-sites.content-block
	if sites.length > 0
		ol#webring-detail-site-list
			each site in sites
				li(id='site_' + site.url)
					span.name #{site.name}
					a.url(href=site.url) #{site.url}
					if isUserModerator
						div.site-controls
							button(onclick='removeSite(\'' + webring.url + '\',\'' + site.url + '\')') Remove
	else
		if isUserModerator
			| This webring does not have any sites yet. Feel free to add some!
		else
			| This webring does not have any sites yet.

	div#sites-error-message.error-message
include ../include/footer
