include ../include/page.pug
h2 Create Webring
div.content-block
	form#create-webring-form
		div.form-field
			label(for='name') Webring Name
			input#name(type='text' name='name' minlength=2 maxlength=80 required='')
		div.form-field
			label(for='url') Webring URL
			input#url(type='text' name='url' required='')
		div.form-field
			label(for='description') Description
			input#description(type='text' name='description' required='')
		div.form-field
			label(for='privateRing') Private Webring?
			input#private-ring(type='checkbox' name='privateRing')
		div.form-buttons
			button(type='button', onclick="createWebring()")
				| Create
		div#create-webring-error-message.error-message

include ../include/footer
