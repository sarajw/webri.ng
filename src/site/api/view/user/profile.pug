include ../include/page.pug
h2 Profile
div 
	| Hello #{user.username}

	h3 Webrings
	ul.webring-list
		each webring in webrings
			li 
				a(href='/webring/' + webring.url).webring-name #{webring.name}
				div #{webring.description}

	if totalPages > 1
		if currentPage > 1
			a(href='/user?page=' + previousPageNumber) Previous
		if currentPage < totalPages
			a(href='/user?page=' + nextPageNumber) Next

	div
		button(type='button', onclick="insertRandomWebrings()") Insert
