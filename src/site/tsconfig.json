{
	"compilerOptions": {
		"noImplicitAny": true,

		"lib": ["es2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",

		"sourceMap": true,
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		/* https://github.com/DefinitelyTyped/DefinitelyTyped/issues/12044 */
		"skipLibCheck": true,
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		],
	},
	"exclude": [
		"node_modules",
		".nyc_output"
	]
}
